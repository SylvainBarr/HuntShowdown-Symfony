{% extends 'front/base.html.twig' %}

{% block title %}{{ 'pages.maps.title'|trans}}{% endblock %}

{% block body %}

    <div class="page-title my-5 ps-5">
        <h2>{{ 'pages.maps.title'|trans }}</h2>
    </div>
    <div class="my-5 mx-auto col-lg-8 col-md-12">
        <div class="accordion accordion-flush" id="Mapsaccordion">
            {% for map in maps %}
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{ map.slug }}" aria-expanded="true" aria-controls="collapse{{ map.slug }}">
                            {{ map.name }}
                        </button>
                    </h2>
                    <div id="collapse{{ map.slug }}" class="accordion-collapse collapse" data-bs-parent="#Mapsaccordion">
                        <div class="accordion-body ">
                            <img src="{{ map.imageUrl }}" alt="{{ map.name }}">
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
